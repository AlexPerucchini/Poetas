<% provide(:title, 'Poets') %>
<h1>Poets</h1>
<div class="row">
  <div class="span12">
    <% if @users.any? %>
      <%= paginate @users %> 
      <ul class="poets">
        <% @users.each do |user| %>
        <li>
          <span class="title"><%= user.name %></span> <br>
          <span class="timestamp">
            Poems posted <%= user.poems.count %> <br>
            Member since <%= time_ago_in_words(user.created_at) %> ago.
          </span>
        </li>
        <% end %>
      </ul> 
      <%= paginate @users %> 
    <% end %>
  </div>
</div>
