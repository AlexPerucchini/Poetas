<% provide(:title, @user.name) %>
<h1>Poems by <%= @user.name %></h1>
<div class="row">
  <div class="span12">
    <% if @user.poems.any? %>
      <h3>Poems found (<%= @user.poems.count %>)</h3>
      <%= paginate @poems %>  
      <ol class="poems">
        <%= render(@poems) %>
      </ol>
      <%= paginate @poems %>  
    <% end %>
  </div>
</div>
